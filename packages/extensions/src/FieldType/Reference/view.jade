.form-group.field-type-reference
    small= $field.getTitle()
    .form-line(class= $field.isDisabled() ? 'disabled' : '')
        select(
        name= $field.getField(),
        disabled= $field.isDisabled(),
        data-live-search="true",
        data-abs-empty-request="true",
        data-ajax-get-selected= Link.getLinkApiFieldType($field.getKey(), 'getSelected') + "/?modelKey=#{ $field.getModelKey() }&selected=#{ value }&label=#{ $field.getOptions().label }&reference=#{ JSON.stringify(reference) }",
        data-abs-ajax-url= Link.getLinkApiFieldType($field.getKey(), 'getItems') + "/?modelKey=#{ $field.getModelKey() }&label=#{ $field.getOptions().label }&selected=#{ value }&reference=#{ JSON.stringify(reference) }",
        data-key-selected= value,
        data-abs-ajax-type="GET",
        data-abs-cache="false"
        ).form-control.show-tick