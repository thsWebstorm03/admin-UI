.row.clearfix.widget-models-info(
    data-url= Link.getLinkApiWidget($widget.getKey(), 'getModelsInfo') + "/?models=" + JSON.stringify(models.map(function (modelObject) { return modelObject.model.getKey() }))
)

    each modelObject in models
        .col-lg-3.col-md-3.col-sm-6.col-xs-12
            a(href= Link.getLinkModelList(modelObject.model.getKey()))
                .info-box.hover-expand-effect(
                    class= 'bg-' + modelObject.color,
                    data-model= modelObject.model.getKey()
                )
                    .icon
                        i.material-icons= modelObject.icon
                    .content
                        .text= modelObject.model.getNamePlural()
                        .number.count-to(data-from='0', data-speed='350', data-fresh-interval='20')