.form-group
    small= $field.getTitle()
    .form-line(class= $field.isDisabled() ? 'disabled' : '')
        input(
            type="text",
            name= $field.getField(),
            value= value,
            disabled= $field.isDisabled(),
            data-format= $field.getOptions().format,
            data-time= String($field.getOptions().time),
            data-date= String($field.getOptions().date)
        ).field-date.form-control.datetimepicker